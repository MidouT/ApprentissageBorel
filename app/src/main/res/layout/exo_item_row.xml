<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dim_horizontal_margin"
        android:layout_weight="2"
        android:background="@drawable/layout_border">

        <TextView
            android:id="@+id/exo_word_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:textSize="40dp"
            android:textColor="#252424"
            android:text="Mot"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="@dimen/dim_horizontal_margin"
        android:background="@drawable/layout_border">

        <TextView
            android:id="@+id/exo_allographe_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allographe"
            android:textColor="#252424"
            android:lineSpacingMultiplier="1.5"
            android:lineSpacingExtra="6dp"
            android:textSize="@dimen/dim_text_size_normal" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="@dimen/dim_horizontal_margin"
        android:background="@drawable/layout_border">

        <TextView
            android:id="@+id/exo_son_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tab son"
            android:textColor="#252424"
            android:lineSpacingMultiplier="1.5"
            android:lineSpacingExtra="6dp"
            android:textSize="30dp" />

    </RelativeLayout>


</LinearLayout>